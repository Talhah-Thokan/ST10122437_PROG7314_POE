<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Notification permission for Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- Storage permission for profile image upload -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MedAssist"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MedAssist">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.screens.auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.MedAssist" />

        <activity
            android:name=".ui.screens.profile.ProfileActivity"
            android:exported="false"
            android:label="@string/profile"
            android:theme="@style/Theme.MedAssist" />
        
        <activity
            android:name=".ui.screens.articles.ArticleDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.MedAssist" />
        
        <activity
            android:name=".ui.screens.booking.BookingActivity"
            android:exported="false"
            android:theme="@style/Theme.MedAssist" />
        
        <activity
            android:name=".ui.screens.booking.BookingConfirmationActivity"
            android:exported="false"
            android:theme="@style/Theme.MedAssist" />
        
        <activity
            android:name=".ui.screens.settings.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.MedAssist" />
        
        <!-- Firestore Data Seeder Activity -->
        <activity
            android:name=".data.firebase.FirestoreDataSeederActivity"
            android:exported="false"
            android:theme="@style/Theme.MedAssist"
            android:label="Seed Database" />
        
        <!-- Firebase Cloud Messaging Service -->
        <service
            android:name=".services.MedAssistFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>
